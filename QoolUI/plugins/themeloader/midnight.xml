<?xml version="1.0" encoding="UTF-8"?>
<qooltheme name="midnight">
    <author>qoolui</author>
    <description>A Qool dark theme</description>
    <constants>
        <bool property="animationEnabled" value="YES" />

        <list property="papaWords">
            <string>Pa</string>
            <string>PaPa</string>
            <string>Pa!!!</string>
            <string>啪！</string>
            <string>啪!!!</string>
            <string>啪啪!</string>
            <string>啪啪啪</string>
        </list>

        <number property="instantDuration" value="100"/>
        <number property="transitionDuration" value="200"/>
        <number property="movementDuration" value="400"/>

        <number property="menuCutSize" copy="controlCutSize"/>
        <number property="buttonCutSize" value="5"/>

        <number property="textSize" value="14" />
        <number property="titleTextSize" copy="textSize" add="2"/>
        <number property="toolTipTextSize" copy="textSize" add="-4"/>
        <number property="importantTextSize" copy="textSize" multiply="2"/>
        <number property="decorativeTextSize" copy="toolTipTextSize"/>

        <number property="controlCutSize" value="10"/>
        <number property="controlBorderWidth" value="1"/>
        <number property="controlTitleTextSize" copy="controlTextSize" add="-2" />
        <number property="controlTextSize" copy="textSize" add="-2"/>

        <number property="windowCutSize" value="35"/>
        <number property="windowElementSpacing" value="5"/>
        <number property="windowEdgeSpacing" value="5"/>
        <number property="windowTitleTextSize" value="14"/>
        <number properyt="windowBorderWidth" value="1"/>

        <number property="dialogCutSize" copy="controlCutSize"/>
        <number property="dialogBorderWidth" copy="controlBorderWidth"/>

        <!-- Default Colors -->
        <color property="white" value="#F5F5F5"/>
        <color property="silver" value="#B9B9B9"/>
        <color property="grey" value="#2D2D2D"/>
        <color property="black" value="#141414"/>
        <color property="red" value="#FF414D"/>
        <color property="maroon" value="#6A2020"/>
        <color property="yellow" value="#EEFC7A"/>
        <color property="olive" value="#8D8A41"/>
        <color property="lime" value="#00FF00"/>
        <color property="green" value="#00FF68"/>

        <color property="aqua" value="#06D4D4"/>
        <color property="cyan" value="#6AEDFF"/>
        <color property="teal" value="#31717A"/>
        <color property="blue" value="#0099FF"/>
        <color property="navy" value="#002843"/>
        <color property="fuchsia" value="#FF57FF"/>
        <color property="purple" value="#C48EFF"/>
        <color property="orange" value="#FFB650"/>
        <color property="brown" value="#A05E3B"/>
        <color property="pink" value="#FF6DC9"/>

        <!-- Main Styles -->
        <color property="positive" copy="green"/>
        <color property="negative" copy="red"/>
        <color property="warning" copy="pink"/>

        <color property="controlBackgroundColor" copy="grey"/>
        <color property="controlBorderColor" copy="grey" lighter="1.2"/>
        <color property="infoColor" copy="cyan"/>
    </constants>
    <active>
        <!--Active group is a must-have-->
        <!--Tone Colors-->
        <color property="accent" copy="orange"/>
        <!-- BG Colors-->
        <color property="light" value="#F8F8F2"/>
        <color property="midlight" copy="light" darker="1.2"/>
        <color property="dark" value="#282A36"/>
        <color property="mid" copy="dark" darker="1.2"/>
        <color property="shadow" copy="dark" darker="1.5"/>
        <!-- Highlights-->
        <color property="highlight" copy="accent" lighter="1.2" />
        <color property="highlightedText" copy="dark" />
        <color property="link" value="#6AEDFF"/>
        <color property="linkVisited" value="#C48EFF" />
        <!--UI Control Colors-->
        <color property="text" value= "#F8F8F8"/>
        <color property="base" value="#43475C"/>
        <color property="alternateBase" copy="base" lighter="1.1"/>
        <color property="window" copy="dark" />
        <color property="windowText" copy="text"/>
        <color property="button" copy="base"/>
        <color property="buttonText" copy="text"/>
        <color property="placeHolderText" copy="text" darker="1.5"/>
        <color property="toolTipBase" value= "#EEFC7A"/>
        <color property="toolTipText" copy="dark"/>
    </active>
    <inactive>
        <!--Can contain different vlues only-->
        <color property="accent" copy="buttonText"/>
    </inactive>
    <disabled>
        <!--Can contain different vlues only-->
        <color property="accent" copy="negative"/>
        <color property="text" copy="mid" lighter="1.2"/>
        <color property="windowText" copy="mid" lighter="1.2"/>
        <color property="buttonText" copy="mid" lighter="1.2"/>
    </disabled>
</qooltheme>
